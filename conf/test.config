/*
========================================================================================
    Nextflow config file for running minimal tests
========================================================================================
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run main.nf -profile test,docker --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Limit resources so that this can run on GitHub Actions
    max_cpus   = 2
    max_memory = '6.GB'
    max_time   = '6.h'

    // Test data parameters
    site                    = 'TestSite'
    raw_data_dir           = 'test_data/raw'
    outdir                 = 'test_results'
    
    // Reduce computational requirements for testing
    n_clones_target        = 100
    initial_sample_size    = 50
    chunk_size             = 100
    
    // Use smaller thresholds for faster testing
    maf_filter             = 0.05
    min_allele_read_count  = 5
    
    // ML parameters optimized for small test dataset
    train_test_split       = 0.8
    cv_folds               = 3
    
    // Use standard amplicon set for consistency
    optim_ampset           = false
}
