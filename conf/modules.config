/*
========================================================================================
    modules.config
    Module-specific configuration for the smalaria-failure-detection pipeline
========================================================================================
    Define resource requirements, labels, containers, or other settings per module.
----------------------------------------------------------------------------------------
*/

process {

    withName: 'SMALARIA_FAILURE_DETECTION:DATA_CLEANING' {
        cpus  = 2
        memory = '4.GB'
        time  = '2.h'
        label = 'standard'
    }

    withName: 'SMALARIA_FAILURE_DETECTION:PAIRS_GENERATION' {
        cpus  = 4
        memory = '16.GB'
        time  = '6.h'
        label = 'highmem'
    }

    withName: 'SMALARIA_FAILURE_DETECTION:ML_MODELING' {
        cpus  = 8
        memory = '32.GB'
        time  = '12.h'
        label = 'highmem'
    }

    withName: 'SMALARIA_FAILURE_DETECTION:CLONE_GENERATION' {
        cpus  = 4
        memory = '16.GB'
        time  = '8.h'
        label = 'highmem'
    }

    withName: 'SMALARIA_FAILURE_DETECTION:FEATURE_CALCULATION' {
        cpus  = 4
        memory = '8.GB'
        time  = '4.h'
        label = 'standard'
    }

    withName: 'SMALARIA_FAILURE_DETECTION:FNR_CALCULATION' {
        cpus  = 2
        memory = '3.GB'
        time  = '2.h'
        label = 'standard'
    }

    withName: 'SMALARIA_FAILURE_DETECTION:MIX_GENERATION' {
        cpus  = 4
        memory = '16.GB'
        time  = '6.h'
        label = 'highmem'
    }

    withName: 'SMALARIA_FAILURE_DETECTION:COI_CALCULATION' {
        cpus  = 2
        memory = '3.GB'
        time  = '2.h'
        label = 'standard'
    }

    withName: 'SMALARIA_FAILURE_DETECTION:TARGET_AUGMENTATION' {
        cpus  = 4
        memory = '8.GB'
        time  = '4.h'
        label = 'standard'
    }
}

